# Configurações do Sistema CRC-ES
# Copie este arquivo para .env e configure suas variáveis

# Banco de Dados
# Para SQLite (desenvolvimento):
DATABASE_URL=sqlite:///app.db

# Para SQL Server (produção):
# DATABASE_URL=mssql+pyodbc://usuario:senha@servidor/database?driver=ODBC+Driver+17+for+SQL+Server

# Segurança
SECRET_KEY=crces-secret-key-2024
JWT_SECRET_KEY=jwt-crces-secret-2024
JWT_ACCESS_TOKEN_EXPIRES=3600

# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-app
SMTP_USE_TLS=true

# WhatsApp
WHATSAPP_DELAY=2
WHATSAPP_MAX_RETRIES=3
WHATSAPP_TIMEOUT=30

# Sistema
DEBUG=false
FLASK_ENV=production
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

