# Configurações do Flask
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
FLASK_ENV=development

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///crces.db
# Para PostgreSQL: postgresql://username:password@localhost/crces
# Para MySQL: mysql://username:password@localhost/crces

# Configurações de Email SMTP
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@crces.org.br
FROM_NAME=CRC-ES
SMTP_USE_TLS=true

# Configurações do WhatsApp (Evolution API)
WHATSAPP_API_URL=http://localhost:8080
WHATSAPP_API_KEY=your-evolution-api-key
WHATSAPP_INSTANCE=crces-instance

# Configurações de Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Configurações de Segurança
RATE_LIMIT_ENABLED=true
MAX_FAILED_ATTEMPTS=5
BLOCK_DURATION=1800

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=logs/crces.log

